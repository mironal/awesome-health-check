{
    "name": "Awesome Health Checker",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "identity",
        "https://github.com/"
    ],
    "web_accessible_resources": ["options.html"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_icon": "icon32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "index.js"
            ],
            "run_at": "document_idle"
        }
    ]
}